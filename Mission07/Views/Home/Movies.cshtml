@{
    ViewData["Title"] = "Movies";
}

@model Mission07.Models.Movie ;

<h1>@ViewData["Title"]</h1>
<br />
<form method="post">
    <label>Category</label>
    <select id="category" asp-for="CategoryId">
        @foreach (Category i in ViewBag.Categories)
            {
                <option value="@i.CategoryId">@i.CategoryType</option>
            }
    </select>
    <br />
    <label>Title</label>
    <input type="text" id="title" asp-for="title" />
    <br />
    <label>Year</label>
    <input type="number" id="year" asp-for="year"/>
    <br />
    <label>Director</label>
    <input type="text" id="director" asp-for="director" />
    <br />
    <label>Rating</label>
    <select id="rating" asp-for="rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label>Edited</label>
    <select id="edited" asp-for="edited">
        <option value=true>Yes</option>
        <option value=false>No</option>
    </select>
    <br />
    <label>Lent To</label>
    <input type="text" id="lentTo" asp-for="lentTo" />
    <br />
    <label>Notes</label>
    <input type="text" id="notes" asp-for="notes" />
    <br /><br />
    <input id="movieBtb" type="submit" value="Add Movie" />
    <br />
    <div asp-validation-summary="All"></div>
</form>

